+	if (reg_val & MV_GMAC_PORT_AUTO_NEG_CFG_FORCE_LINK_UP_MASK)
+		*force_link_up = true;
+	else
+		*force_link_up = false;
+
+	if (reg_val & MV_GMAC_PORT_AUTO_NEG_CFG_FORCE_LINK_DOWN_MASK)
+		*force_link_down = true;
