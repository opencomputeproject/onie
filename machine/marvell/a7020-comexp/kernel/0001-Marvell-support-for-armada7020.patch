+	case MV_GOP_PORT2:
+		U32_SET_FIELD(reg, NETC_PORT2_PAUSE_MASK,
+			      en << NETC_PORT2_PAUSE_OFFSET);
+		break;
+	case MV_GOP_PORT3:
+		U32_SET_FIELD(reg, NETC_PORT3_PAUSE_MASK,
+			      en << NETC_PORT3_PAUSE_OFFSET);
+		break;
+	}
+
+	mv_gop110_rfu1_write(gop, MV_NETCOMP_PORTS_CONTROL_0, reg);
+}
