+	val = mv_gop110_xlg_mac_read(gop, mac_num, MV_XLG_PORT_MAC_CTRL4_REG);
+	U32_SET_FIELD(val, MV_XLG_MAC_CTRL4_MAC_MODE_DMA_1G_MASK, 1 <<
+					MV_XLG_MAC_CTRL4_MAC_MODE_DMA_1G_OFFS);
