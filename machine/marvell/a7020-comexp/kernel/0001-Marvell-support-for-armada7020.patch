+	val = (port->priv->hw.tclk / USEC_PER_SEC) * c->rx_coalesce_usecs;
+	if (val > MVPP2_MAX_ISR_RX_THRESHOLD)
+		pr_err("RX coalesced time value too high, rounded to %ld usecs\n",
+		       (MVPP2_MAX_ISR_RX_THRESHOLD * USEC_PER_SEC)
