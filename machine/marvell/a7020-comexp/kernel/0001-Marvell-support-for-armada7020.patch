+static int cvm_nand_waitfunc(struct mtd_info *mtd, struct nand_chip *chip)
+{
+	struct cvm_nfc *tn = to_cvm_nfc(chip->controller);
+	int ret;
+
+	ret = ndf_wait_idle(tn);
+	return (ret < 0) ? -EIO : 0;
+}
