+{
+	int cos_width, cos_mask;
+
+	cos_width = ilog2(roundup_pow_of_two(
+			  port->cos_cfg.num_cos_queues));
+	cos_mask  = (1 << cos_width) - 1;
+
+	return((port->cos_cfg.pri_map >>
+	       (cos_value * 4)) & cos_mask);
