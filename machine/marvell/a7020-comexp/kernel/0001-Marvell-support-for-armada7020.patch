+static inline void mv_pp22_thread_write(struct mv_pp2x_hw *hw, u32 sw_thread,
+					u32 offset, u32 data)
+{
+	writel(data, hw->base + sw_thread * MVPP2_ADDR_SPACE_SIZE + offset);
