+/* Get byte of data and its enable bits from tcam sw entry */
+static void mv_pp2x_prs_tcam_data_byte_get(struct mv_pp2x_prs_entry *pe,
+					   unsigned int offs,
+					   unsigned char *byte,
+					   unsigned char *enable)
