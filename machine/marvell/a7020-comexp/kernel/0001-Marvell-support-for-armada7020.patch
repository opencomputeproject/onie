+void mv_gop110_netc_xon_set(struct gop_hw *gop, enum mv_gop_port port, bool en)
+{
+	u32 reg;
+
+	reg = mv_gop110_rfu1_read(gop, MV_NETCOMP_PORTS_CONTROL_0);
