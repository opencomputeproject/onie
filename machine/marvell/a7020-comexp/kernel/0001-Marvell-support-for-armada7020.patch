+static struct mv_pp2x_bm_pool *mv_pp2x_bm_pool_use(
+			struct mv_pp2x_port *port,
+			enum mv_pp2x_bm_pool_log_num log_pool)
+{
+	return mv_pp2x_bm_pool_use_internal(port, log_pool, true);
+}
