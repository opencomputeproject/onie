+	if (err)
+		return err;
+
+	err = mv_pp2x_prs_vlan_init(pdev, hw);
+	if (err)
+		return err;
+
+	mv_pp2x_prs_vid_init(hw);
+
+	err = mv_pp2x_prs_pppoe_init(hw);
+	if (err)
+		return err;
+
+	err = mv_pp2x_prs_ip6_init(hw);
+	if (err)
+		return err;
+
+	err = mv_pp2x_prs_ip4_init(hw);
+	if (err)
+		return err;
