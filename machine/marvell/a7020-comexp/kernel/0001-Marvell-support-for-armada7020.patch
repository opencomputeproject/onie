+/* Get first free double vlan ai number */
+static int mv_pp2x_prs_double_vlan_ai_free_get(struct mv_pp2x_hw *hw)
+{
+	int i;
+
+	for (i = 1; i < MVPP2_PRS_DBL_VLANS_MAX; i++) {
+		if (!hw->prs_double_vlans[i])
+			return i;
+	}
+
+	return -EINVAL;
+}
