+		hw->gop.gop_110.ptp.base =
+			(void *)(hw->gop.gop_110.mspg.base + MVPP22_PTP_BASE_OFFS);
+		hw->gop.gop_110.ptp.obj_size = MVPP22_GOP_PORT_OFFS;
